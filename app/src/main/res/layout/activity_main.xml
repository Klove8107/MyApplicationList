<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#aac2ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kevins Nanodegree Apps!"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contextClickable="false"
        android:textColorHint="@android:color/background_light"
        android:textColor="#ffffffff"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyButton"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#a2f08c35"
        android:textColor="@android:color/white"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoreButton"
        android:layout_below="@+id/spotifyButton"
        android:layout_alignRight="@+id/spotifyButton"
        android:layout_alignEnd="@+id/spotifyButton"
        android:backgroundTint="#a2f08c35"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryButton"
        android:layout_below="@+id/scoreButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#a2f08c35"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildButton"
        android:layout_below="@+id/libraryButton"
        android:layout_alignLeft="@+id/libraryButton"
        android:layout_alignStart="@+id/libraryButton"
        android:backgroundTint="#a2f08c35"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/baconButton"
        android:layout_below="@+id/buildButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#a2f08c35"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstoneButton"
        android:layout_below="@+id/baconButton"
        android:layout_alignRight="@+id/baconButton"
        android:layout_alignEnd="@+id/baconButton"
        android:backgroundTint="#a2f0002c"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:onClick="sendMessage"/>
</RelativeLayout>
